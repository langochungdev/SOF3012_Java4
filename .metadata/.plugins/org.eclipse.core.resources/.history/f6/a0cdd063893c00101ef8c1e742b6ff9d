package Controller;
package Servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.List;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import DAO.UserDAOImpl;
import DAO.VideoDAOImpl;
import Entity.User;
import Entity.Video;

@WebServlet("/video")
public class b1 extends HttpServlet {
    private UserDAOImpl userDAO = new UserDAOImpl();
    private VideoDAOImpl videoDAO = new VideoDAOImpl();

    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        resp.setContentType("text/html;charset=UTF-8");
        PrintWriter out = resp.getWriter();

        out.println("<html><body>");
        
        // 1. Tìm User theo id hoặc email
        String idOrEmail = "";
        if (idOrEmail != null) {
            User user = userDAO.findByIdOrEmail(idOrEmail);
            out.println("<h2>Tìm User theo ID hoặc Email</h2>");
            out.println(user != null ? "User: " + user.getFullname() : "Không tìm thấy user");
        }

        // 2. Tìm video theo từ khóa
        String keyword = "";
        if (keyword != null) {
            List<Video> videos = videoDAO.findByKeyword(keyword);
            out.println("<h2>Video chứa từ khóa: " + keyword + "</h2>");
            for (Video v : videos) {
                out.println("<p>" + v.getTitle() + "</p>");
            }
        }

        // 3. Top 10 video được yêu thích nhất
        out.println("<h2>Top 10 video được yêu thích</h2>");
        List<Video> topVideos = videoDAO.findTop10MostFavorited();
        for (Video v : topVideos) {
            out.println("<p>" + v.getTitle() + "</p>");
        }

        // 4. Video không được ai thích
        out.println("<h2>Video không được thích</h2>");
        List<Video> notFavorited = videoDAO.findNotFavorited();
        for (Video v : notFavorited) {
            out.println("<p>" + v.getTitle() + "</p>");
        }

        // 5. Video được chia sẻ trong năm 2024
        out.println("<h2>Video chia sẻ năm 2024</h2>");
        List<Video> shared2024 = videoDAO.findSharedIn2024();
        for (Video v : shared2024) {
            out.println("<p>" + v.getTitle() + "</p>");
        }

        // 6. Thông tin chia sẻ tổng hợp
        out.println("<h2>Thông tin chia sẻ video</h2>");
        out.println("<table border='1'><tr><th>Tiêu đề</th><th>Lượt chia sẻ</th><th>Ngày đầu</th><th>Ngày cuối</th></tr>");
        List<Object[]> summary = videoDAO.getVideoShareSummary();
        for (Object[] row : summary) {
            out.println("<tr><td>" + row[0] + "</td><td>" + row[1] + "</td><td>" + row[2] + "</td><td>" + row[3] + "</td></tr>");
        }
        out.println("</table>");

        out.println("</body></html>");
    }
}
